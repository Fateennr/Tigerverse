generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Player{
  ID              Int @id @default(autoincrement())
  Name            String
  DOB             DateTime
  BattingStyle    String
  ICCRanking      Int
  IntDebut        DateTime
  Profile         String
  CaptainStatus   Boolean
  PlayerRole      String 
}


